<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cl_MainDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimarySdk</item>
        <item name="colorAccent">@color/colorAccentSdk</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

        <item name="bottomSheetStyle">@style/cl_MainDialogSheetStyle</item>
        <item name="android:windowIsFloating">false</item>

    </style>

    <style name="cl_MainDialogSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="cl_FullscreenDialogTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="colorPrimary">@color/colorPrimarySdk</item>
        <item name="colorAccent">@color/colorAccentSdk</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/cl_background</item>
    </style>

    <style name="cl_MainDialogThemeDark" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimarySdkDark</item>
        <item name="colorAccent">@color/colorAccentSdkDark</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

        <item name="bottomSheetStyle">@style/cl_MainDialogSheetStyleDark</item>
        <item name="android:windowIsFloating">false</item>

    </style>

    <style name="cl_MainDialogSheetStyleDark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_background_dark</item>
    </style>

    <style name="cl_FullscreenDialogThemeDark" parent="android:Theme.Light.NoTitleBar">
        <item name="colorPrimary">@color/colorPrimarySdkDark</item>
        <item name="colorAccent">@color/colorAccentSdkDark</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/cl_backgroundDark</item>
    </style>
</resources>